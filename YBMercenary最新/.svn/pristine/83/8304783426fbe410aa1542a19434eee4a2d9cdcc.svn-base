        [self.navigationController pushViewController:vc animated:YES];
    }else if (sender.tag == 411){
        YBMyUploadCertificateViewController *vc = [[YBMyUploadCertificateViewController alloc] init];
        vc.title = @"证书上传";
        [self.navigationController pushViewController:vc animated:YES];
